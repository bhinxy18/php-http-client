{
    "name": "rawbee/php-http-client",
    "description": "A public API for a simple HTTP client requests",
    "type": "project",
    "authors": [
        {
            "name": "Ruby L",
            "email": "bhinxy18@yahoo.com"
        }
    ],
    "scripts": {
        "unit": [
            "@composer install",
            "phpunit"
        ],
        "lint": "phpcs --standard=PSR12 -n --extensions=php --ignore=vendor ."
